{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            // Need to tell Xdebug where the source files being debugged are.
            // See the VERY IMPORTANT note in README.original.md. 
            // If you're seeing a warning about the value of pathMappings needing
            // to be an array, ignore it - trying to "fix" it will break Xdebug!
            "pathMappings": {
                "/var/www/html": "${workspaceFolder}/www"
            }
        }
    ]
}